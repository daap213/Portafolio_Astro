---
import DropdownText from "@/components/DropdownText.astro";
import { habilidades } from "@cv";
---

<ol class="relative mt-16">
  {
    habilidades.map((habilidad) => (
      <li class="">
        <DropdownText titulo={habilidad.name}>
          <ul class="border border-gray-200 rounded overflow-hidden shadow-md">
            {habilidad.skills.map((activity) => (
              <li class="w-full px-4 py-2 border-b text-justify hover:bg-sky-100 hover:text-gray-900 border-gray-300 dark:border-gray-200 last:border-none transition-all duration-300 ease-in-out">
                {activity}
              </li>
            ))}
          </ul>
          <ul class="border border-gray-400  dark:border-green-400 rounded overflow-hidden shadow-md">
            {habilidad.related &&
              habilidad.related.map((activity) => (
                <li class="w-full px-4 py-2 border-b text-justify hover:bg-sky-100 hover:text-gray-900 border-gray-300 dark:border-gray-200 last:border-none transition-all duration-300 ease-in-out">
                  {activity}
                </li>
              ))}
          </ul>
        </DropdownText>
      </li>
    ))
  }
</ol>
