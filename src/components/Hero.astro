---
import Badge from "@/components/Badge.astro";
import SocialPill from "@/components/SocialPill.astro";
import { sobreMi } from "@cv";
---

<div class="max-w-3xl">
  <div class="flex gap-4 mb-4">
    <img
      class="rounded-full shadow-lg size-16"
      src={sobreMi.imagenRuta}
      alt={sobreMi.nombre}
    />
    <a
      href={sobreMi.estado.url}
      target="_blank"
      rel="noopener"
      class="flex items-center transition md:justify-center md:hover:scale-105"
    >
      <Badge>{sobreMi.estado.est}</Badge>
    </a>
  </div>
  <h1
    class="text-4xl font-bold tracking-tight text-gray-800 sm:text-5xl dark:text-white"
  >
    {sobreMi.nombreTitulo}
  </h1>
  {
    sobreMi.contenido.map((content) => (
      <p
        class="mt-6 text-xl text-justify text-gray-800 dark:[&>strong]:text-yellow-200 [&>strong]:text-yellow-500 [&>strong]:font-semibold dark:text-gray-300"
        set:html={content}
      />
    ))
  }

  <nav class="flex flex-wrap gap-4 mt-8">
    {
      sobreMi.botones.map((boton) => (
        <SocialPill href={boton.url}>
          <boton.icon class="size-4" />
          {boton.title}
        </SocialPill>
      ))
    }
  </nav>
</div>
