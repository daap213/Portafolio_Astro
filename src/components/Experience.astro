---
import ExperienceItem from "./TimeHistItem.astro";
import LinkInline from "./LinkInline.astro";
import DropdownText from "@/components/DropdownText.astro";
import { experiencias } from "@cv";
---

<ol class="relative mt-16">
  {
    experiencias.map((experiencie) => (
      <li class="">
        <ExperienceItem {...experiencie}>
          <DropdownText titulo="Responsabilidades y actividades:">
            <ul class="border border-gray-200 rounded overflow-hidden shadow-md">
              {experiencie.description.map((activity) => (
                <li class="w-full px-4 py-2 border-b text-justify hover:bg-sky-100 hover:text-gray-900 border-gray-300 dark:border-gray-200 last:border-none transition-all duration-300 ease-in-out">
                  {activity}
                </li>
              ))}
            </ul>

            {experiencie.link && (
              <LinkInline href={experiencie.link}>
                Saber m√°s{" "}
                <svg
                  xmlns="http://www.w3.org/2000/svg"
                  class="w-5 icon icon-tabler icon-tabler-chevron-right"
                  width="24"
                  height="24"
                  viewBox="0 0 24 24"
                  stroke-width="2"
                  stroke="currentColor"
                  fill="none"
                  stroke-linecap="round"
                  stroke-linejoin="round"
                >
                  <>
                    <path stroke="none" d="M0 0h24v24H0z" fill="none" />
                    <path d="M9 6l6 6l-6 6" />
                  </>
                </svg>
              </LinkInline>
            )}
          </DropdownText>
        </ExperienceItem>
      </li>
    ))
  }
</ol>
