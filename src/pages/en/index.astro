---
import Layout from "@/layouts/Layout.astro";
import SectionContainer from "@/components/otros/SectionContainer.astro";
import { pagIndex } from "@cv/en";
import { navItems } from "@cv/en";
import { footerInfor } from "@cv/en";
import { ui } from "@cv/en";

const rutaLeng = "/Portafolio_Astro/es/";

const primeraSeccion = pagIndex.primeraSeccion;
const secciones = pagIndex.secciones;
---

<Layout
  title={pagIndex.title}
  description={pagIndex.description}
  navItems={navItems}
  footerInfor={footerInfor}
  rutaLeng={rutaLeng}
  ui={ui}
>
  <main class="px-4">
    <SectionContainer
      id={primeraSeccion.navitems.id}
      class={primeraSeccion.classSeccion}
    >
      <h2 class={primeraSeccion.classTittle}>
        <primeraSeccion.icon class={primeraSeccion.classIcon} />
        {primeraSeccion.name}
      </h2>
      <primeraSeccion.seccion
        infoSeccion={primeraSeccion.seccionInfo}
        ui={ui}
      />
    </SectionContainer>
  </main>
  <div class="space-y-24 px-4">
    {
      secciones.map((bloque) => (
        <SectionContainer id={bloque.navitems.id} class={bloque.classSeccion}>
          <h2 class={bloque.classTittle}>
            {bloque.icon && <bloque.icon class={bloque.classIcon} />}
            {bloque.name}
          </h2>
          <bloque.seccion infoSeccion={bloque.seccionInfo} ui={ui} />
        </SectionContainer>
      ))
    }
  </div>
</Layout>
